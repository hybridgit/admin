<h1>Listing Cab Requests</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cab_requests.each do |cab_request| %>
      <tr>
        <td><%= link_to 'Show', cab_request %></td>
        <td><%= link_to 'Edit', edit_cab_request_path(cab_request) %></td>
        <td><%= link_to 'Destroy', cab_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

