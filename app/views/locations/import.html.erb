<main>
  <div class="container">
    <%= form_for @location, url: locations_upload_path, method: :post,html: { multipart: true } do |f| %>
    <div class="row">
      <div class="col s12">
        <ul class="errors"></ul>
        <h5>Import Locations</h5>
        <div class="file-field input-field">
          <input class="file-path validate" type="text"/>
          <input name="file" type="file" placeholder="Please select Excel file" />
        </div>
      </div>
      <div class="col s12">
        <button class="btn waves-effect waves-light" type="submit" name="action">
          Upload <i class="material-icons">file_upload</i>
        </button>
      </div>
    </div>
    <% end %>
  </div>
</main>
