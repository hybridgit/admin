$("ul.errors").html("")
<% if @location.errors.any? %>
  <% @location.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li/>").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#locations-list tbody").html("<%= escape_javascript(render 'index') %>")
  $("#location-modal").closeModal()
<% end %>
