<h3 class="modal-header">Delete Driver</h3>
<div class="modal-content">
  <ul class="errors"></ul>
  <p>Are you sure you wish to delete <strong><%= @driver.display_field %></strong>?</p>
</div>
<div class="modal-footer">
  <%= link_to "Confirm Delete", driver_path(@driver), method: :delete, remote: true, class: "btn blue-grey darken-3 waves-effect waves-light" %>
  <%= link_to "Cancel", "#", class: "btn modal-close" %>
</div>
