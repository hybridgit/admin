$("ul.errors").html("")
<% if @driver.errors.any? %>
  <% @driver.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li/>").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#drivers-list tbody").html("<%= escape_javascript(render 'index') %>")
  $("#driver-modal").closeModal()
<% end %>
