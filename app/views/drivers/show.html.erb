<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <p id="notice"><%= notice %></p>
        <p>
          <%= image_tag @driver.profile_image.url(:thumb) %>
        </p>
        <p>
          <strong>Name:</strong>
          <%= @driver.display_field %>
        </p>
        <p>
          <strong>Date of Birth:</strong>
          <%= @driver.date_of_birth %>
        </p>
        <p>
          <strong>Drivers License:</strong>
          <%= @driver.drivers_license_id %>
        </p>
        <p>
          <%= image_tag @driver.drivers_license_copy.url(:thumb) %>
        </p>
      </div>
      <div class="col s6">
        <p>
          <strong>Car Type:</strong>
          <%= @driver.car_type.name %>
        </p>
        <p>
          <strong>Operation Hours:</strong>
          <%= @driver.operation_hour.name %>
        </p>
        <p>
          <strong>Contact Method:</strong>
          <%= @driver.contact_method.name %>
        </p>
      </div>
    </div>
    <div class="row">
        <div class="col s12">
          <ul class="tabs">
            <li class="tab col s3"><a class="active" href="#driver-address">Address</a></li>
            <li class="tab col s3"><a href="#driver-location">Location</a></li>
            <li class="tab col s3"><a href="#driver-emergency-contact">Ememrgency Contact</a></li>
          </ul>
        </div>
        <div id="driver-address" class="col s12">
          Address
        <div>
        <div id="driver-address" class="col s12">
          Location
        <div>
        <div id="driver-emergency-contact" class="col s12">
          Emergency Contact
        </div>
      </div>
  </div>
</main>
