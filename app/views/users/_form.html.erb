
<%= form_for(@user, remote: true) do |f| %>
<% @active_class = @user.username ? "active" : "" %>
<div class="modal-content">
  <ul class="errors"></ul>
  <div class="row">
    <div class="col s6">
      <div class="input-field">
        <%= f.label :username, class: @active_class %>
        <%= f.text_field :username %>
        <span class="help-block"></span>
      </div>
    </div>
    <div class="col s6">
      <div class="input-field">
        <%= f.label :email, class: @active_class %>
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="col s6">
      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="col s6">
      <div class="input-field">
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
  <%= f.submit "Submit", {:class => "btn blue-grey darken-3 waves-effect waves-light"} %>
  <%= link_to "Cancel", "#", class: "btn modal-close", data: {dismiss: "modal"} %>
</div>
<% end %>
