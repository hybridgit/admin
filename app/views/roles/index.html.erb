<main>
  <div class="container">
    <div class="row">
      <div class="col s12">

        <p id="notice"><%= notice %></p>

        <h4>Listing Roles</h4>

        <table id="roles-list" class="striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th colspan="3"></th>
            </tr>
          </thead><tbody>
            <%= render "index" %>
          </tbody>
          <tfoot>
            <tr>
              <td colspan="3">
                <%= page_navigation_links @roles %>
              </td>
            </tr>
          </tfoot>
        </table>

      </div>
    </div>
  </div>
</main>

<%= link_to raw('<i class="material-icons">add</i>'), new_role_path, remote: true, class: "btn-floating btn-large waves-effect waves-light yellow darken-2 black-text action-button"%>

<div id="role-modal" class="modal"></div>
