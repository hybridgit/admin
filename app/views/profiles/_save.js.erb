$("ul.errors").html("")
<% if @profile.errors.any? %>
  <% @profile.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li/>").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $("#profiles-list tbody").html("<%= escape_javascript(render 'index') %>")
  $("#profile-modal").closeModal()
<% end %>
