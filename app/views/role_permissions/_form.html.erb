<%= form_for(@role_permission, remote: true) do |f| %>
<div class="modal-content">
  <ul class="errors"></ul>
  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <%= f.hidden_field :role_id %>
      </div>
      <div class="input-field">
        <%= f.collection_select(:controller, @available_controllers, :name, :name, {:prompt => true}) %>
        <%= f.number_field :controller %>
      </div>
      <div class="input-field">
        <%= f.collection_select(:action, @available_actions, :name, :name, {:prompt => true}) %>
        <%= f.number_field :action %>
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
  <%= f.submit "Submit", {:class => "btn blue-grey darken-3 waves-effect waves-light"} %>
  <%= link_to "Cancel", "#", class: "btn modal-close", data: {dismiss: "modal"} %>
</div>
<% end %>
